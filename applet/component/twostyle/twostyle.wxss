/* component/twostyle/twostyle.wxss */

.scrollBox{
  height: 100%;
}

.content{
    background:rgba(255,255,255,1);
    box-shadow:0rpx 5rpx 10rpx 0rpx rgba(0, 0, 0, 0.02);
    border-radius:10rpx;
    width: 86%;
    margin: 0 auto;
    margin-top: 20rpx;
    padding-top: 34rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    padding-bottom: 34rpx;
 }

 .content::after{
   content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
 }

 .head{
   position: relative;
   width: 12%;
   height: 78rpx;
   float: left;
 }
  .head-image{
    width: 78rpx;
    height: 78rpx;
    border-radius:50%;
 }
.headImage-buttom{
     position: absolute;
    width: 24rpx;
    height: 24rpx;
    bottom: 0;
    right: 0;
}

 .info{
   float: left;
   margin-left: 20rpx;
   width: 58%;
 }

 .info-first{
   font-size: 29rpx;
    font-weight: bold;
    color: rgba(72,91,132,1);
    margin-top: 6rpx;
 }
  .info-first::after{
   content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
 }

 .info-first-name{
    width: 45%;
    word-break: break-all;/*允许在单词内换行*/
    text-overflow: -o-ellipsis-lastline;/*css3中webkit内核提供的一个方法类似ellipsis*/
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;/*自适应盒子*/
    -webkit-line-clamp: 1;/*此处为1行,如果是两行就改成2*/
    -webkit-box-orient: vertical;
    float: left;
 }

 .info-first-tip{
    width: 48%;
    font-size:26rpx;
    color:rgba(102,102,102,1);
    margin-left: 4%;
    font-weight: normal;
    float: left;
 }


  .info-second{
   font-size:24rpx;
   color:rgba(153,153,153,1);
   height: 32rpx;
 }

 /* 关注 */
.right-up{
   width:22%;float: right;margin-top: 1%;

 }
 .cz-gz{
   width: 100%;
   border-radius: 50rpx;
   font-size:26rpx;
   color:rgba(153,153,153,1);
   height: 60rpx;
   background:#FFFFFF;
     /* 设置flex布局 */
    display: flex;
    /* 垂直居中 */
    align-items: center;
    /* 水平居中 */
    justify-content: center;
    text-align:center;
 }


 .white-cz{
     border:1rpx solid rgba(219,219,219,1);
 }
  .lv-cz{
      background:rgba(39,198,140,1);
      color:#fff;
      border:none;
 }